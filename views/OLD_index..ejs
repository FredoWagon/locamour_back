<script>




  // Page load animation


  const potos = document.querySelector('#potos');
  const gens = document.querySelector('#perso');
  const ciel = document.querySelector('#ciel');

  const text2 = document.querySelector('#text2');
  const text1 = document.querySelector('#text1');


  //barb

  const barbTitle = document.querySelector('#barb_title');
  const barbContainer = document.querySelector('.barbara__container');

  const fredTitle = document.querySelector('#fred_title')
  const fredContainer = document.querySelector('.fred__container')


  window.addEventListener('DOMContentLoaded', function (event) {
    const blackScreen = document.querySelector('.loading__backgound');
    blackScreen.classList.add('desaper');
    text1.classList.add('movedtext1')
    gens.classList.add('mobingperso');


    setTimeout(() => {
      blackScreen.style.display = "none";

    }, 3500);
    setTimeout(() => {
      text2.classList.add('movedtext2')


    }, 2000);



  })


  // Scroll event !



  window.addEventListener('scroll', function (event) {
    let scrollPositionY = window.scrollY;
    console.log(scrollPositionY);
    potos.style.top = scrollPositionY * 0.10 + 'px';
    ciel.style.top = scrollPositionY * 0.30 + 'px';
  })




  //animation sur scroll



  // get the element to animate
  const barbTitleHeight = barbTitle.clientHeight;
  const barbContainerHeight = barbContainer.clientHeight

  const nousPhotos = document.querySelector('.nous_photos');
  const nousPhotosHeight = nousPhotos.clientHeight;
  const allPictures = document.querySelectorAll('.carre');

  const fredTitleHeight = fredTitle.clientHeight
  const fredContainerHeight = fredContainer.clientHeight


  // listen for scroll event and call animate function
  document.addEventListener('scroll', inView);

  // check if element is in view
  function inView() {
    // get window height
    var windowHeight = window.innerHeight;
    // get number of pixels that the document is scrolled
    var scrollY = window.scrollY || window.pageYOffset;

    // get current scroll position (distance from the top of the page to the bottom of the current viewport)
    var scrollPosition = scrollY + windowHeight;
    // get element position (distance from the top of the page to the bottom of the element)

    //barb
    var barbContainerPosition = barbContainer.getBoundingClientRect().top + scrollY + barbTitleHeight;
    // nous photo
    const nousPhotosPosition = nousPhotos.getBoundingClientRect().top + scrollY

    //fred
    const fredContainerPosition = fredContainer.getBoundingClientRect().top + scrollY + fredTitleHeight;

    // EVENEMENTS
    //barb
    if (scrollPosition > barbContainerPosition) {
      barbContainer.classList.add('active_barbara_container');
    } else {
      barbContainer.classList.remove('active_barbara_container')
    }
    //nous
    if (scrollPosition > nousPhotosPosition) {
      nousPhotos.classList.add('active_nous_photos');
      allPictures.forEach(image => {
        setTimeout(() => {
          image.classList.add('active__care');
        }, Math.floor(Math.random() * 5000));
      })
    } else {
      nousPhotos.classList.remove('active_nous_photos')
      allPictures.forEach(image => {
        image.classList.remove('active__care');
      })

    }

    //fred
    if (scrollPosition > fredContainerPosition) {
      fredContainer.classList.add('active_fred_container');
    } else {
      fredContainer.classList.remove('active_fred_container')
    }




  }

  // animate element when it is in view
  function animate() {
    // is element in view?
    if (inView()) {
      // element is in view, add class to element
      barbContainer.classList.add('active_barbara_container');
    } else {
      barbContainer.classList.remove('active_barbara_container')
    }
  }







</script>


